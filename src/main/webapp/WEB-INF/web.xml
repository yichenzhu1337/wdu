<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>index1.xhtml</welcome-file>
    </welcome-file-list>

    <!-- Auth -->
    <servlet>
        <servlet-name>auth</servlet-name>
        <servlet-class>com.whiteboard.servlets.AuthServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>auth</servlet-name>
        <url-pattern>/api/v1/auth/*</url-pattern>
    </servlet-mapping>

    <!-- Courses -->
    <servlet>
        <servlet-name>courses</servlet-name>
        <servlet-class>com.whiteboard.servlets.CourseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>courses</servlet-name>
        <url-pattern>/api/v1/courses/*</url-pattern>
    </servlet-mapping>

    <!-- Course Materials -->
    <servlet>
        <servlet-name>course-materials</servlet-name>
        <servlet-class>com.whiteboard.servlets.CourseMaterialServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>course-materials</servlet-name>
        <url-pattern>/api/v1/course-materials/upload</url-pattern>
    </servlet-mapping>

    <!-- Course Materials -->
    <servlet>
        <servlet-name>course-announcements</servlet-name>
        <servlet-class>com.whiteboard.servlets.CourseMaterialServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>course-announcements</servlet-name>
        <url-pattern>/api/v1/course-announcements/make</url-pattern>
    </servlet-mapping>

    <!-- Feeds -->
    <servlet>
        <servlet-name>feeds</servlet-name>
        <servlet-class>com.whiteboard.servlets.FeedServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>feeds</servlet-name>
        <url-pattern>/api/v1/feeds</url-pattern>
    </servlet-mapping>

    <!-- Profiles -->
    <servlet>
        <servlet-name>profiles</servlet-name>
        <servlet-class>com.whiteboard.servlets.ProfileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>profiles</servlet-name>
        <url-pattern>/api/v1/profiles/*</url-pattern>
    </servlet-mapping>

    <display-name>Web Application</display-name>
</web-app>
